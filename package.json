{
  "name": "dembrandt",
  "version": "0.4.0",
  "description": "Extract design tokens and brand assets from any website",
  "main": "index.js",
  "type": "module",
  "bin": {
    "dembrandt": "./index.js"
  },
  "files": [
    "index.js",
    "lib/"
  ],
  "scripts": {
    "start": "node index.js",
    "brand-challenge": "node run-no-login-challenge.mjs",
    "brand-challenge:report": "node run-no-login-challenge.mjs || true",
    "install-browser": "npx playwright install chromium || echo 'Playwright browser installation failed. You may need to install system dependencies manually.'",
    "release": "./release.sh"
  },
  "keywords": [
    "design-tokens",
    "design-system",
    "branding",
    "web-scraping",
    "cli",
    "playwright",
    "extraction"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/thevangelist/dembrandt.git"
  },
  "bugs": {
    "url": "https://github.com/thevangelist/dembrandt/issues"
  },
  "homepage": "https://github.com/thevangelist/dembrandt#readme",
  "author": "thevangelist <info@esajuhana.com>",
  "license": "MIT",
  "dependencies": {
    "@playwright/browser-chromium": "^1.57.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "ora": "^7.0.1",
    "playwright-core": "^1.57.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
