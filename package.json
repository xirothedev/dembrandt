{
  "name": "dembrandt",
  "version": "0.2.0",
  "description": "Extract design tokens and brand assets from any website",
  "main": "index.js",
  "type": "module",
  "bin": {
    "dembrandt": "./index.js"
  },
  "files": [
    "index.js",
    "lib/"
  ],
  "scripts": {
    "start": "node index.js",
    "install-browser": "npx playwright install chromium",
    "postinstall": "npx playwright install chromium --with-deps || echo 'Playwright install failed, you may need to run: npx playwright install chromium'",
    "release": "./release.sh"
  },
  "keywords": [
    "design-tokens",
    "design-system",
    "branding",
    "web-scraping",
    "cli",
    "playwright",
    "extraction"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/thevangelist/dembrandt.git"
  },
  "bugs": {
    "url": "https://github.com/thevangelist/dembrandt/issues"
  },
  "homepage": "https://github.com/thevangelist/dembrandt#readme",
  "author": "thevangelist <info@esajuhana.com>",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "playwright": "^1.40.0",
    "cli-table3": "^0.6.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
